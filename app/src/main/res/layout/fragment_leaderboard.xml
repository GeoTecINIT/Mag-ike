<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geoc.uji.esr7.mag_ike.LeaderBoardFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/grid_trips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:columnCount="3"
                android:rowCount="3">

                <TextView
                    android:id="@+id/tv_trips_position"
                    style="@style/MidNumber"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_column="0"
                    android:layout_gravity="top|left"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:background="@drawable/sh_leaderboard_individual_frame"
                    android:elegantTextHeight="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/dashboard_default_nodata"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_trips_contribution"
                    style="@style/MidNumber"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:background="@drawable/sh_leaderboard_individual_frame"
                    android:elegantTextHeight="false"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/dashboard_default_nodata"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/iv_trips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:src="@drawable/ic_leaderboard_path"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_trips_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="0"
                    android:text="@string/leaderboard_trips_label1" />

                <TextView
                    android:id="@+id/tv_trips_own"
                    style="@style/BigNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="1"
                    android:text="@string/dashboard_default_nodata" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_trips_label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaderboard_trips_label2" />

                    <TextView
                        android:id="@+id/tv_trips_total"
                        style="@style/SmallNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="@string/dashboard_default_nodata" />

                    <TextView
                        android:id="@+id/tv_trips_label0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaderboard_trips_label0" />
                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:id="@+id/grid_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:columnCount="3"
                android:rowCount="3">

                <TextView
                    android:id="@+id/tv_tags_position"
                    style="@style/MidNumber"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:background="@drawable/sh_leaderboard_individual_frame"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="7"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_tags_contribution"
                    style="@style/MidNumber"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:layout_rowSpan="3"
                    android:background="@drawable/sh_leaderboard_individual_frame"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="7"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/iv_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_row="0"
                    android:src="@drawable/ic_leaderboard_tags"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_tags_count_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_row="0"
                    android:text="You have" />

                <TextView
                    android:id="@+id/tv_tags_count"
                    style="@style/BigNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_row="1"
                    android:text="456" />

                <TextView
                    android:id="@+id/tv_tags_count_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="2"
                    android:text="Tags"
                    android:textAlignment="center" />

            </GridLayout>

            <ExpandableListView
                android:id="@+id/ls_trips_top3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_row="3" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geoc.uji.esr7.mag_ike.LeaderboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="70dp">

        <GridLayout
            android:id="@+id/grid_trips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_dashboard_panel_dark"
            android:columnCount="2"
            android:rowCount="3">

            <GridLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:background="@drawable/sh_dashboard_panel">

            </GridLayout>

            <ImageView
                android:id="@+id/iv_trips_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:src="@drawable/ic_leaderboard_path"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_trips_position_label"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground" />

            <GridLayout
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:background="@drawable/sh_dashboard_panel">

            </GridLayout>

            <ImageView
                android:id="@+id/iv_trips_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_trips_path_label"
                android:layout_width="150dp"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:text="Your Trips:"
                android:textAlignment="center"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tv_trips_position"
                style="@style/BigNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:text="10"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tv_trips_count"
                style="@style/MidNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:text="123"
                android:textColor="@color/colorBackground" />

            <ExpandableListView
                android:id="@+id/list_top3_trips"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="2"
                android:visibility="invisible" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/sh_dashboard_panel_dark"
            android:columnCount="2"
            android:rowCount="3">

            <GridLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:background="@drawable/sh_dashboard_panel">

            </GridLayout>

            <ImageView
                android:id="@+id/iv_trips_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:src="@drawable/ic_leaderboard_tags"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_trips_position_label"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground" />

            <GridLayout
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:background="@drawable/sh_dashboard_panel">

            </GridLayout>

            <ImageView
                android:id="@+id/iv_trips_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_trips_path_label"
                android:layout_width="150dp"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:text="Your Tags:"
                android:textAlignment="center"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tv_trips_position"
                style="@style/BigNumber"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:text="7"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tv_trips_count"
                style="@style/MidNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:text="456"
                android:textColor="@color/colorBackground" />

            <ExpandableListView
                android:id="@+id/list_top3_trips"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="2"
                android:visibility="invisible" />

        </GridLayout>

        <GridLayout
            android:id="@+id/grid_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/sh_dashboard_panel_dark"
            android:columnCount="2"
            android:rowCount="3">

            <GridLayout
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:background="@drawable/sh_dashboard_panel">

            </GridLayout>

            <ImageView
                android:id="@+id/iv_trips_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:src="@drawable/ic_leaderboard_position"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_trips_position_label"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:textAlignment="center"
                android:textColor="@color/colorBackground" />

            <GridLayout
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_column="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:background="@drawable/sh_dashboard_panel">

            </GridLayout>

            <ImageView
                android:id="@+id/iv_trips_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_trips_path_label"
                android:layout_width="150dp"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:layout_row="0"
                android:text="Your Kilometers:"
                android:textAlignment="center"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tv_trips_position"
                style="@style/BigNumber"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:layout_rowSpan="2"
                android:text="1"
                android:textColor="@color/colorBackground" />

            <TextView
                android:id="@+id/tv_trips_count"
                style="@style/MidNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:layout_row="1"
                android:text="54598"
                android:textColor="@color/colorBackground" />

            <ExpandableListView
                android:id="@+id/list_top3_trips"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="2"
                android:visibility="invisible" />

        </GridLayout>

    </LinearLayout>

</FrameLayout>

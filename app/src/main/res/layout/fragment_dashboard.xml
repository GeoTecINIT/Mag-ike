<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geoc.uji.esr7.mag_ike.DashboardFragment"
    android:id="@+id/start_activity_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/grid_campaign"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day_label"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/day_label" />

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_current_day"
                android:layout_toEndOf="@+id/tv_day_label"
                style="@style/MediumSizeText" />

            <TextView
                android:text="@string/dayof_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_day_of"
                android:gravity="center_vertical|center_horizontal"
                android:layout_toEndOf="@+id/tv_current_day" />

            <TextView
                android:text="@string/nodata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_total_day"
                android:background="@drawable/sh_calendar"
                android:gravity="bottom|center_horizontal"
                android:textAlignment="gravity"
                android:layout_toEndOf="@+id/tv_day_of" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contextClickable="false"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="false"
            android:id="@+id/grid_time"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true">

            <TextView
                android:text="2:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_timer" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:id="@+id/grid_distance"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/grid_campaign"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/distance_units"
                android:layout_column="2"
                android:layout_row="0"
                android:textColor="@color/colorPrimaryDark"
                style="@style/UnitsLabel"
                android:id="@+id/label_distance"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_max_label"
                android:layout_column="0"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/label_max_distance" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:layout_column="1"
                android:layout_row="1"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                style="@style/SmallNumber"
                android:id="@+id/value_max_distance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/distance_units"
                android:layout_column="2"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/units_max_distance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_total_label"
                android:layout_column="0"
                android:layout_row="2"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/label_total_distance" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:layout_column="1"
                android:layout_row="2"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                style="@style/SmallNumber"
                android:id="@+id/value_total_distance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/distance_units"
                android:layout_column="2"
                android:layout_row="2"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/units_total_distance" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_distance"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center_horizontal"
                style="@style/BigNumber"
                android:layout_columnSpan="2"
                android:layout_width="240dp" />


        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_speed"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/grid_distance"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_speed"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                style="@style/BigNumber"
                android:layout_columnSpan="2"
                android:layout_width="240dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/speed_units"
                android:id="@+id/speed_units"
                android:layout_column="2"
                android:layout_row="0"
                android:textColor="@color/colorPrimaryDark"
                style="@style/UnitsLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_max_label"
                android:id="@+id/label_max_speed"
                android:layout_column="0"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                style="@style/UnitsLabel" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_max_speed"
                android:layout_column="1"
                android:layout_row="1"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                style="@style/SmallNumber"
                android:layout_width="240dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/speed_units"
                android:id="@+id/units_max_speed"
                android:layout_column="2"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                style="@style/UnitsLabel" />
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:id="@+id/status_contribution"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_contribution_location"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="0"
                android:layout_row="0"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_location_label"
                android:id="@+id/contribution_units_location"
                android:layout_column="0"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_contribution_distance"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_distance_label"
                android:id="@+id/contribution_units_distance"
                android:layout_column="1"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_width="wrap_content" />
            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_contribution_speed"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="2"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_speed_label"
                android:id="@+id/contribution_units_speed"
                android:layout_column="2"
                android:layout_row="1"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_width="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/value_contribution"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="0"
                android:layout_row="2"
                android:textAlignment="center"
                android:layout_columnSpan="3" />

            <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_units"
                android:id="@+id/contribution_units"
                android:layout_column="0"
                android:layout_row="3"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_columnSpan="3"
                android:layout_width="match_parent" />

        </GridLayout>


    </RelativeLayout>

</FrameLayout>

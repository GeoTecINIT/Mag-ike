<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geoc.uji.esr7.mag_ike.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView_profile" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="7">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_name"
                    android:layout_row="0"
                    android:hint="@string/profile_name"
                    android:layout_margin="5dp"
                    android:layout_marginTop="60dp"
                    android:textAlignment="center"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/et_email"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:hint="@string/profile_email"
                    android:layout_margin="5dp"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_age"
                    android:id="@+id/tv_age_label"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_row="2"
                    android:layout_column="0"
                    style="@style/ProfileLabel" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sv_age"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="0"
                    android:layout_row="3">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:id="@+id/rg_age"
                        android:orientation="horizontal"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_age_0_20"
                            android:id="@+id/rb_age_0_20"
                            android:background="@drawable/btn_app_default"
                            android:layout_margin="2dp"
                            android:button="@null"
                            android:textColor="@color/abc_primary_text_material_dark" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_age_20_30"
                            android:text="@string/profile_age_20_30"
                            android:background="@drawable/btn_app_default"
                            android:layout_margin="2dp"
                            android:button="@null"
                            android:textColor="@color/abc_primary_text_material_dark" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_age_30_40"
                            android:text="@string/profile_age_30_40"
                            android:layout_margin="2dp"
                            android:background="@drawable/btn_app_default"
                            android:button="@null"
                            android:textColor="@color/abc_primary_text_material_dark" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_age_40_50"
                            android:button="@null"
                            android:text="@string/profile_age_40_50"
                            android:layout_margin="2dp"
                            android:background="@drawable/btn_app_default"
                            android:textColor="@color/abc_primary_text_material_dark" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/rb_age_50_"
                            android:text="@string/profile_age_50_"
                            android:layout_margin="2dp"
                            android:background="@drawable/btn_app_default"
                            android:button="@null"
                            android:textColor="@color/abc_primary_text_material_dark" />
                    </RadioGroup>
                </HorizontalScrollView>

                <TabHost
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tabHost_gender"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/layout_tab_gender">

                        <TabWidget
                            android:id="@android:id/tabs"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"></TabWidget>

                        <FrameLayout
                            android:id="@android:id/tabcontent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/tab_female"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:baselineAligned="false">

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_gravity="center_horizontal">

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:id="@+id/rg_avatar_female"
                                        android:layout_margin="5dp"
                                        android:gravity="center_horizontal">

                                        <RadioButton
                                            android:id="@+id/rb_avatar_female_1"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_female_cyclist_1" />

                                        <RadioButton
                                            android:id="@+id/rb_avatar_female_2"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_female_cyclist_2"  />

                                        <RadioButton
                                            android:id="@+id/rb_avatar_female_3"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_female_cyclist_3"  />

                                        <RadioButton
                                            android:id="@+id/rb_avatar_female_4"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_female_cyclist_4" />

                                    </RadioGroup>
                                </HorizontalScrollView>
                            </LinearLayout>



                            <LinearLayout
                                android:id="@+id/tab_male"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:baselineAligned="false">

                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:layout_gravity="center_horizontal">

                                    <RadioGroup
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/rg_avatar_male"
                                        android:orientation="horizontal"
                                        android:layout_margin="5dp"
                                        android:gravity="center_horizontal">

                                        <RadioButton
                                            android:id="@+id/rb_avatar_male_1"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_male_cyclist_1" />

                                        <RadioButton
                                            android:id="@+id/rb_avatar_male_2"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_male_cyclist_2" />

                                        <RadioButton
                                            android:id="@+id/rb_avatar_male_4"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_male_cyclist_3" />

                                        <RadioButton
                                            android:id="@+id/rb_avatar_male_3"
                                            android:layout_margin="5dp"
                                            android:layout_width="100dp"
                                            android:layout_height="100dp"
                                            android:button="@null"
                                            android:background="@drawable/sh_rb_avatar_male_cyclist_4" />

                                    </RadioGroup>
                                </HorizontalScrollView>
                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>
                </TabHost>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sv_bike_type"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:layout_margin="5dp">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rg_bike_type"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/rb_bicycle_type_1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:button="@null"
                            android:background="@drawable/sh_rb_bicycle_type_1" />

                        <RadioButton
                            android:id="@+id/rb_bicycle_type_2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:button="@null"
                            android:background="@drawable/sh_rb_bicycle_type_2" />

                        <RadioButton
                            android:id="@+id/rb_bicycle_type_3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:button="@null"
                            android:background="@drawable/sh_rb_bicycle_type_3" />

                        <RadioButton
                            android:id="@+id/rb_bicycle_type_4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:button="@null"
                            android:background="@drawable/sh_rb_bicycle_type_4" />

                        <RadioButton
                            android:id="@+id/rb_bicycle_type_5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:button="@null"
                            android:background="@drawable/sh_rb_bicycle_type_5" />

                        <RadioButton
                            android:id="@+id/rb_bicycle_type_6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:button="@null"
                            android:background="@drawable/sh_rb_bicycle_type_6" />

                    </RadioGroup>
                </HorizontalScrollView>

                <Switch
                    android:text="@string/profile_bike_shared"
                    android:id="@+id/sw_rented"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:switchTextAppearance="@style/ProfileLabel"
                    android:textColor="@color/colorPrimary" />

            </GridLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geoc.uji.esr7.mag_ike.DashboardFragment"
    android:id="@+id/start_activity_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView_dashboard"
            android:layout_marginTop="40dp">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:rowCount="9"
                android:id="@+id/grid_status"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/logo_distance"
                    android:src="@drawable/id_distance"
                    android:layout_margin="20dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_columnSpan="2" />

                <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/distance_label"
                    android:id="@+id/distance_label"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:gravity="center_horizontal"
                    android:layout_margin="20dp"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="120dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/distance_units"
                    android:id="@+id/distance_units"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_rowSpan="4"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/logo_speed"
                    android:src="@drawable/ic_speed"
                    android:layout_margin="20dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_columnSpan="2" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/speed_label"
                    android:id="@+id/speed_label"
                    android:layout_margin="20dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:text="@string/nodata"
                    android:id="@+id/value_speed"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_rowSpan="4"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/speed_units"
                    android:id="@+id/speed_units"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_rowSpan="4"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:id="@+id/logo_contribution"
                    android:src="@drawable/ic_tree"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_columnSpan="2"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/contribution_label"
                    android:id="@+id/contribution_label"
                    android:layout_column="4"
                    android:layout_row="1"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_columnSpan="2" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:text="@string/nodata"
                    android:id="@+id/value_contribution_location"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="4"
                    android:layout_row="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/contribution_units"
                    android:id="@+id/contribution_units_location"
                    android:layout_column="5"
                    android:layout_row="2"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:text="@string/nodata"
                    android:id="@+id/value_contribution_distance"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="4"
                    android:layout_row="3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/contribution_units"
                    android:id="@+id/contribution_units_distance"
                    android:layout_column="5"
                    android:layout_row="3"
                    android:textColor="@color/colorPrimaryDark" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:text="@string/nodata"
                    android:id="@+id/value_contribution_speed"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="4"
                    android:layout_row="4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/contribution_units"
                    android:id="@+id/contribution_units_speed"
                    android:layout_column="5"
                    android:layout_row="4"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:text="@string/nodata"
                    android:id="@+id/value_contribution"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_column="4"
                    android:layout_row="6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/contribution_units"
                    android:id="@+id/contribution_units"
                    android:layout_column="5"
                    android:layout_row="6"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                    android:text="@string/nodata"
                    android:id="@+id/value_distance"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:gravity="center_horizontal"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_rowSpan="4"
                    android:layout_gravity="center_vertical" />

            </GridLayout>
        </ScrollView>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:columnCount="5"
            android:rowCount="1"
            android:layout_marginBottom="2dp">

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:background="@drawable/sh_day_frame"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:background="@drawable/sh_day_frame"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:background="@drawable/sh_calendar"
                android:gravity="bottom|center_horizontal"
                android:textAlignment="gravity" />

            <TextView
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/sh_day_frame" />

            <TextView
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/sh_day_frame" />
        </GridLayout>


    </RelativeLayout>

</FrameLayout>

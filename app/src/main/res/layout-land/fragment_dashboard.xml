<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="geoc.uji.esr7.mag_ike.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="9"
            android:id="@+id/gridLayout" >
    
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView"
                android:src="@drawable/id_distance"
                android:layout_margin="20dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="3" />
    
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_speed"
                android:layout_margin="20dp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_rowSpan="3" />
    
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_tree"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_margin="20dp"
                android:layout_rowSpan="3" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/distance_label"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:layout_margin="20dp" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/textView3"
                android:layout_column="1"
                android:layout_row="1"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/distance_units"
                android:id="@+id/textView4"
                android:layout_column="1"
                android:layout_row="2"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/speed_label"
                android:id="@+id/textView5"
                android:layout_margin="20dp"
                android:layout_column="1"
                android:layout_row="3"
                android:gravity="center_horizontal" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/textView6"
                android:layout_column="1"
                android:layout_row="4"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/speed_units"
                android:id="@+id/textView7"
                android:layout_column="1"
                android:layout_row="5"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_label"
                android:id="@+id/textView8"
                android:layout_column="1"
                android:layout_row="6"
                android:layout_margin="20dp" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
                android:text="@string/nodata"
                android:id="@+id/textView9"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:layout_row="7" />
    
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/contribution_units"
                android:id="@+id/textView10"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_column="1"
                android:layout_row="8" />
        </GridLayout>
    </RelativeLayout>

</FrameLayout>
